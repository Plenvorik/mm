#include <windows.h>
#include "resource.h"

// Icon resource
IDI_MAIN_ICON ICON "..\\assets\\mouse-animal.ico"

// Macro to convert numbers to strings
#define STRINGIZE2(x) #x
#define STRINGIZE(x) STRINGIZE2(x)

// Version defines with fallback defaults
#ifndef VERSION_MAJOR
#define VERSION_MAJOR 1
#endif
#ifndef VERSION_MINOR
#define VERSION_MINOR 0
#endif
#ifndef VERSION_PATCH
#define VERSION_PATCH 3
#endif
#ifndef VERSION_BUILD
#define VERSION_BUILD 0
#endif

// Version information
VS_VERSION_INFO VERSIONINFO
FILEVERSION VERSION_MAJOR,VERSION_MINOR,VERSION_PATCH,VERSION_BUILD
PRODUCTVERSION VERSION_MAJOR,VERSION_MINOR,VERSION_PATCH,VERSION_BUILD
FILEFLAGSMASK VS_FFI_FILEFLAGSMASK
FILEFLAGS 0x0L
FILEOS VOS_NT_WINDOWS32
FILETYPE VFT_APP
FILESUBTYPE VFT2_UNKNOWN
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904B0"
        BEGIN
            VALUE "CompanyName", "Horizonia Precision Tech"
            VALUE "FileDescription", "Mouse Mover - Prevents Screen Lock"
            VALUE "FileVersion", STRINGIZE(VERSION_MAJOR) "." STRINGIZE(VERSION_MINOR) "." STRINGIZE(VERSION_PATCH) ".0"
            VALUE "InternalName", "mm.exe"
            VALUE "LegalCopyright", "Â© 2025 Horizonia Precision Tech - MIT License"
            VALUE "OriginalFilename", "mm.exe"
            VALUE "ProductName", "Mouse Mover"
            VALUE "ProductVersion", STRINGIZE(VERSION_MAJOR) "." STRINGIZE(VERSION_MINOR) "." STRINGIZE(VERSION_PATCH) ".0"
            VALUE "Comments", "Lightweight C++ utility to prevent screen locks and maintain active status"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1200
    END
END

// Menu resources for context menu
MENU_TRAY MENU
BEGIN
    MENUITEM "Resume", IDM_RESUME
    MENUITEM "Pause", IDM_PAUSE
    MENUITEM SEPARATOR
    MENUITEM "Exit", IDM_EXIT
END

// String table
STRINGTABLE
BEGIN
    IDS_APP_NAME "Mouse Mover"
    IDS_TOOLTIP_ACTIVE "Mouse Mover - Active"
    IDS_TOOLTIP_PAUSED "Mouse Mover - Paused"
    IDS_MENU_PAUSE "Pause"
    IDS_MENU_RESUME "Resume"
    IDS_MENU_EXIT "Exit"
END
